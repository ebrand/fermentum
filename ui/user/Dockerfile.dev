FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY ui/user/package*.json ./

# Install dependencies
RUN npm install

# Copy all app files
COPY ui/user/ .

# Expose the dev server port
EXPOSE 5173

# Start the development server with hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]